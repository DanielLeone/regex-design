:host
    margin 0
    padding 0
    min-height 100vh
    max-height 100vh
    min-width 100vw
    max-width 100vw
    display flex
    flex-flow column nowrap
    justify-content flex-start
    align-items stretch

    super
        order 1
        flex 0 1 auto
        height 100%

    div
        order 2
        flex 1 0 50vh
        display flex
        flex-flow row nowrap

        palette
            order 1
            flex 0 1 auto
            width auto
            height auto

        workbench
            order 2
            flex 2 1 0
            height auto

    expression
        order 3
        flex 0 0 0

    test
        order 4
        flex 1 1 10vh

    footer
        order 5
        height 100%
        flex 0 1 auto

