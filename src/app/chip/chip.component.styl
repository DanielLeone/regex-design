$chip-height = 40px
$button-background = linear-gradient(to right, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.3) 100%)
$button-opacity = 0.8

:host
    height $chip-height
    color #fff
    padding 0
    font-size 16px
    box-shadow 2px 3px 5px rgba(0, 0, 0, 0.5)
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items center
    opacity 0.8
    user-select none

    div
        height 100%
        text-align left
        line-height $chip-height

        &.drag
            flex 0 0 5%
            text-align center
            min-width 18px
            opacity $button-opacity
            background-image $button-background

        &.display
            flex 1 1 auto
            padding-left 10px
            max-width 200px

    input[type="text"]:focus
        outline none
        border-bottom-color rgba(255, 255, 255, 0.3)

    input[type="text"]
        transition border-bottom-color linear 0.1s
        opacity 1
        flex 1 1 auto
        margin 0 20px
        background-color transparent
        color white
        border none
        border-bottom 1px solid white

    button
        flex 0 0 5%
        height 100%
        padding 0
        margin-left auto
        min-width 40px
        border none
        color white
        background transparent
        opacity $button-opacity
        background-image $button-background

@media screen and (max-width: 1200px) and (min-width: 650px)

    :host
        font-size 12px

        input[type="text"]
            margin 0 5px

@media screen and (max-width: 650px)

    :host
        font-size 10px

        div.drag
            padding-left 3px

        button
            min-width 20px

        input[type="text"]
            margin 0 3px
