:host
    width 100%
    height 100%
    overflow-y scroll
    overflow-x hidden
    display flex

    div.container
        display none
        width 50vw
        height 100%

    label
        user-select none
        height 100%
        display flex
        align-items center
        justify-content center
        width 40px

    input
        display none

    input:checked ~ div.container
        display block

@media screen and (min-width: 800px)


    div.container
        display block !important

    label
        display none !important
