:host
    width 100%
    height 100%
    overflow-y scroll
    overflow-x hidden
    display flex

// The container when it's hiding
    div.container
        display none
        width 70vw
        height auto
        background-color: rgba(255, 255, 255, 0.8);
        box-shadow 4px 2px 8px 2px rgba(27, 27, 27, 0.23);

    label
        user-select none
        height 100%
        display flex
        align-items center
        justify-content center
        width 40px

    input
        opacity 0
        z-index -1
        position absolute

// When it's showing
    input:checked ~ div.container
        display block
        position: absolute;
        z-index: 2;
        left: 40px;

    input:checked ~ label > i
        transform rotate(90)

@media screen and (min-width: 800px)

    div.container
        display block !important

    label
        display none !important
